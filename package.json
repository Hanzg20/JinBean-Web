{
  "name": "jinbean-web",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && npm run dev:next",
    "dev:admin": "cd apps/admin && npm run dev:next",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^1.12.0"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "@clerk/nextjs": "^6.23.1",
    "@types/next": "^8.0.7",
    "@types/react": "^19.1.8",
    "next": "^15.3.4",
    "next-intl": "^4.3.1",
    "react": "^19.1.0"
  }
}
